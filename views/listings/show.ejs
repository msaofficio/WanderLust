<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3><%= listing.title %></h3>
  </div>
  <br />
  <div class="card col-6 offset-2">
    <img
      src="<%= listing.image %>"
      class="card-img-top show-img"
      alt="listing image"
    />
    <div class="card-body">
      <p class="card-text">
        <%= listing.description %> <br />
        &#8377;<%= listing.price.toLocaleString("en-IN") %> <br />
        <%= listing.location %> <br />
        <%= listing.country %>
      </p>

      <p class="card-text">
        <small class="text-body-secondary">Last updated 3 mins ago</small>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-4 offset-2 btns mb-4">
      <form method="get" action="/listings/<%= listing._id %>/edit">
        <button class="btn btn-dark btn-color">Edit Listing</button>
      </form>
      <br />
      <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark delete-btn">Delete Listing</button>
      </form>
    </div>
    <hr />
    <div class="col-8 offset-2 mb-3">
      <h4>Leave a Review</h4>
      <form
        action="/listings/<%= listing.id %>/reviews"
        method="post"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <input
            type="range"
            id="rating"
            name="review[rating]"
            min="1"
            max="5"
            class="form-range"
          />
        </div>
        <div class="mb-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea
            class="form-control"
            name="review[comment]"
            id="comment"
            cols="50"
            rows="5"
            required
          ></textarea>
          <div class="invalid-feedback">
            Please add some comments for review
          </div>
        </div>
        <button class="btn btn-outline-dark mb-2">Submit Review</button>
      </form>
      <hr>
      <h4>All reviews</h4>
      <% for( review of listing.reviews ) { %>
        
      <% } %>
    </div>
  </div>
</div>
